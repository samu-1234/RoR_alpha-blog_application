<div class="container">
		<h2>Welcome,You are in Alpha-blog Article Page...</h1>
		<h3>Show All Article Here..</h2>
</div>
<div class="container">

<table border="1" class="table table-bordered table-dark hover" >
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>
	</tbody>
		<% @obj.each do |article| %>
			<tr>
				<td><%= article.id %></td>
				<td><%= article.title %></td>
				<td><%= article.body %></td>
				<td><%= link_to "Show", article_path(article.id)%></td>
				<td><%= link_to "Edit", edit_article_path(article.id)%></td>
				<td><%= link_to "Delete", article_path(article), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<p>
	<%= link_to 'New Article', new_article_path %>
</p>
</div>